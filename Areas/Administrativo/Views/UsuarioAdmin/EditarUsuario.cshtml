@using JemakEadPro.Models.Enums.Usuario;
@model JemakEadPro.Models.Usuario



<div class="container">
    <h1>Cadastro de Usuario</h1>
    <span><strong>Data Cadatro: </strong>@Model.DataCadastro.ToString("dd/MM/yyyy")</span> - 
    <span><strong>Id: </strong> @Model.Id</span>

    <form action="/adm/usuarios/editar" method="post" enctype="multipart/form-data">
        <input type="number" name="Id" value="@Model.Id" hidden>

        <div class="row">
            <div class="col">
                <label for="Nome">Nome: </label>
                <input class="form-control" type="text" name="Nome" value="@Model.Nome">
            </div>

            <div class="col">
                <label for="Email">E-mail: </label>
                <input class="form-control" type="text" name="Email" value="@Model.Email">
            </div>

            <div class="col">
                <label for="CPF">CPF: </label>
                <input class="form-control" type="text" name="CPF" value="@Model.CPF">
            </div>

            <div class="col">
                <label for="RG">RG: </label>
                <input class="form-control" type="text" name="RG" value="@Model.RG">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="Telefone">Telefone: </label>
                <input class="form-control" type="text" name="Telefone" value="@Model.Telefone">
            </div>

            <div class="col">
                <label for="Celular">Celular: </label>
                <input class="form-control" type="text" name="Celular" value="@Model.Celular">
            </div>

            <div class="col">
                <label for="TelefoneTrabalho">Telefone Trabalho: </label>
                <input class="form-control" type="text" name="TelefoneTrabalho" value="@Model.TelefoneTrabalho">
            </div>

            <div class="col">
                <label for="Sexo">Sexo: </label>
                <input class="form-control" type="text" name="Sexo" value="@Model.Sexo">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="DataNascimento">Data Nascimento: </label>
                <input class="form-control" type="date" name="DataNascimento" value="@Model.DataNascimento.ToString("yyyy-MM-dd")">
            </div>

            <div class="col">
                <label for="CarteiraProfissional">Carteira Profissional: </label>
                <input class="form-control" type="text" name="CarteiraProfissional" value="@Model.CarteiraProfissional">
            </div>

            @Model.TipoUsuario
            <div class="col">
                <label for="TipoUsuario">Tipo Usuario</label>
                <select name="TipoUsuario" class="form-control">
                    <option value="@Model.TipoUsuario">@Model.TipoUsuario</option>
                    @if (ETipoUsuario.Administrador == Model.TipoUsuario)
                    {
                        <option value="@ETipoUsuario.Aluno">@ETipoUsuario.Aluno</option>
                        <option value="@ETipoUsuario.Professor">@ETipoUsuario.Professor</option>
                    } else if (ETipoUsuario.Aluno == Model.TipoUsuario)
                    {
                        <option value="@ETipoUsuario.Administrador">@ETipoUsuario.Administrador</option>
                        <option value="@ETipoUsuario.Professor">@ETipoUsuario.Professor</option>
                    } else
                    {
                        <option value="@ETipoUsuario.Administrador">@ETipoUsuario.Administrador</option>
                        <option value="@ETipoUsuario.Aluno">@ETipoUsuario.Aluno</option>
                    }
                </select>
            </div>

            <div class="col-12">
                <label for="file">Imagem: </label>
                <input class="form-control" type="file" name="file">
            </div>
        </div>

        <hr class="w-100 mt-4 mb-5">

        <div class="row">
            <div class="col">
                <label for="CEP">CEP: </label>
                <input class="form-control" type="text" name="CEP" value="@Model.CEP">
            </div>

            <div class="col">
                <label for="Endereco">Endereço: </label>
                <input class="form-control" type="text" name="Endereco" value="@Model.Endereco">
            </div>

            <div class="col">
                <label for="Numero">Número: </label>
                <input class="form-control" type="text" name="Numero" value="@Model.Numero">
            </div>

            <div class="col">
                <label for="Complemento">Complemento: </label>
                <input class="form-control" type="text" name="Complemento" value="@Model.Complemento">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="Estado">Estado: </label>
                <input class="form-control" type="text" name="Estado" value="@Model.Estado">
            </div>

            <div class="col">
                <label for="Cidade">Cidade: </label>
                <input class="form-control" type="text" name="Cidade" value="@Model.Cidade">
            </div>

            <div class="col">
                <label for="Bairro">Bairro: </label>
                <input class="form-control" type="text" name="Bairro" value="@Model.Bairro">
            </div>
        </div>

        <hr class="w-100 mt-4 mb-5">

        <div class="row">
            <div class="col">
                <label for="NomeResponsavel">Nome/Empresa Responsavel: </label>
                <input class="form-control" type="text" name="NomeResponsavel" value="@Model.NomeResponsavel">
            </div>

            <div class="col">
                <label for="CpfCnpj">CPF/CNPJ: </label>
                <input class="form-control" type="text" name="CpfCnpj" value="@Model.CpfCnpj">
            </div>

            <div class="col">
                <label for="ResponsavelTelefone">Telefone Responsavel: </label>
                <input class="form-control" type="text" name="ResponsavelTelefone" value="@Model.ResponsavelTelefone">
            </div>
        </div>

        <br>
        <button type="submit" class="btn btn-outline-success">Alterar</button>
    </form>
</div>